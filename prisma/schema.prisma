generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  avatarUrl     String?   @map("avatar_url")
  barkKey       String?   @map("bark_key")
  createdAt     DateTime  @default(now()) @map("created_at")
  lastLogin     DateTime? @map("last_login")
  
  accounts      Account[]
  sessions      Session[]
  assets        Asset[]
  snapshots     Snapshot[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Asset {
  id                    String    @id @default(uuid())
  userId                String    @map("user_id")
  category              String    // 'CASH', 'INVEST', 'PROPERTY', 'LIABILITY'
  assetType             String?   @default("未分类") @map("asset_type") // '实物', '未分类'
  name                  String
  balance               Decimal   @db.Decimal(15, 2)
  purchasePrice         Decimal?  @db.Decimal(15, 2) @map("purchase_price")
  purchaseDate          DateTime? @map("purchase_date")
  status                String    @default("服役中") // '服役中', '已退役', '已卖出'
  tags                  String?   @db.Text // JSON array of tags
  targetCostType        String?   @default("不设定") @map("target_cost_type") // '不设定', '按价格', '按日期'
  targetCost            Decimal?  @db.Decimal(15, 2) @map("target_cost")
  targetDate            DateTime? @map("target_date")
  isPinned              Boolean   @default(false) @map("is_pinned")
  excludeFromTotal      Boolean   @default(false) @map("exclude_from_total")
  excludeFromDailyAvg   Boolean   @default(false) @map("exclude_from_daily_avg")
  notes                 String?   @db.Text
  imageUrl              String?   @map("image_url")
  emoji                 String?
  isHidden              Boolean   @default(false) @map("is_hidden")
  targetPriceNotified   Boolean   @default(false) @map("target_price_notified")
  updateTime            DateTime  @default(now()) @updatedAt @map("update_time")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("assets")
}

model Snapshot {
  id            Int      @id @default(autoincrement())
  userId        String   @map("user_id")
  totalNetWorth Decimal  @db.Decimal(15, 2) @map("total_net_worth")
  recordDate    DateTime @map("record_date") @db.Date
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, recordDate])
  @@map("snapshots")
}
